{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@chatkit-ui/core": ["./packages/core/src"],
      "@chatkit-ui/core/*": ["./packages/core/src/*"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/chatkit-ui" }
  ]
}
